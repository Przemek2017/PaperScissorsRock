<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutColor"
    tools:context="com.ciaston.przemek.psr.PaperScissorsRockActivity">

    <LinearLayout
        android:id="@+id/iv_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_playerChoice"
            style="@style/ImageViewStyle"
            android:background="@color/playerColor"
            app:srcCompat="@drawable/rock" />

        <ImageView
            android:id="@+id/iv_computerChoice"
            style="@style/ImageViewStyle"
            android:background="@color/androidColor"
            app:srcCompat="@drawable/paper" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tv_scores"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_playerScore"
            android:background="@color/playerColor"
            android:text="0"
            style="@style/TextViewScoreStyle" />

        <TextView
            android:id="@+id/tv_computerScore"
            android:background="@color/androidColor"
            android:text="0"
            style="@style/TextViewScoreStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lv_draw"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_below="@+id/iv_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:background="@color/drawColor"
            android:gravity="center"
            android:text="Draw: 0"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/button_layout">

        <Button
            android:id="@+id/paperButton"
            android:text="Paper"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="353dp"
            style="@style/ButtonsStyle" />

        <Button
            android:id="@+id/scissorsButton"
            android:text="Scissors"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="353dp"
            style="@style/ButtonsStyle"/>

        <Button
            android:id="@+id/rockButton"
            android:text="Rock"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="353dp"
            style="@style/ButtonsStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:text="You"
            android:background="@color/playerColor"
            style="@style/PlayersTextView" />

        <TextView
            android:id="@+id/textView5"
            android:text="Android"
            android:background="@color/androidColor"
            style="@style/PlayersTextView" />


    </LinearLayout>

</RelativeLayout>
