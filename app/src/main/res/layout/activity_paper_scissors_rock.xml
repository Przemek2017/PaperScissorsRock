<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciaston.przemek.psr.PaperScissorsRockActivity">

    <LinearLayout
        android:id="@+id/tv_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/button_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="You" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Android" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_scores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_playerChoice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rock" />

        <ImageView
            android:id="@+id/iv_computerChoice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/paper" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tv_scores"
        android:orientation="horizontal"
        android:layout_above="@+id/tv_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_playerChoice"
            android:layout_toLeftOf="@+id/scissorsButton"
            android:layout_toStartOf="@+id/scissorsButton"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Draw: 0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_computerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_draw"
            android:layout_alignEnd="@+id/rockButton"
            android:layout_alignRight="@+id/rockButton"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/button_layout">

        <Button
            android:id="@+id/paperButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_weight="1"
            android:text="Paper"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="353dp" />

        <Button
            android:id="@+id/scissorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_weight="1"
            android:text="Scissors"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="353dp" />

        <Button
            android:id="@+id/rockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_weight="1"
            android:text="Rock"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="353dp" />
    </LinearLayout>


</RelativeLayout>
